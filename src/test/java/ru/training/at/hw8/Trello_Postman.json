	"item": [
		{
			"name": "POST - create table",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response time is less than 1000ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);",
							"});",
							"",
							"pm.test(\"Check table name\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.name).to.eql(\"MyTestTable\");",
							"    console.log(\"Table was created with name: \" + jsonData.name);",
							"});",
							"",
							"pm.test(\"Response should contain id and name tags\", function () {",
							"    pm.response.to.have.jsonBody(\"id\");",
							"    pm.response.to.have.jsonBody(\"name\");",
							"})",
							"",
							"pm.test(\"Set table id for next steps\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.collectionVariables.set(\"tableId\", jsonData.id);",
							"    console.log(\"Table id is: \" + pm.collectionVariables.get(\"tableId\"));",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "https://api.trello.com/1/boards/?key={{key}}&token={{token}}&name={{tableName}}",
					"protocol": "https",
					"host": [
						"api",
